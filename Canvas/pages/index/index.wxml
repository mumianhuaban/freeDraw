<!--index.wxml-->
<view class='container'>
  <text class='topBar'>
    请开始你的绘画表演吧
</text>
  <view class='canvas'>
    <canvas canvas-id='myCanvas' class='myCanvas' disable-scroll='false' bindtouchstart='touchStart' bindtouchmove='touchMove' />

  </view>
  <view class='canvas_tool'>
    <view class='box box1' bindtap='penDraw' data-param="5"></view>
    <view class='box box2' bindtap='penDraw' data-param="15"></view>
    <view class='box box3' bindtap='colorDraw' data-param="#cc0033"></view>
    <view class='box box4' bindtap='colorDraw' data-param="#ff9900"></view>
    <view class='box box5' bindtap='colorDraw' data-param="#f8f8f8"></view>

  </view>
</view>